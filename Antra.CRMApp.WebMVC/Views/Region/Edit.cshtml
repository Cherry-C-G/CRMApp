@model RegionRequestModel

@if (ViewBag.IsEdit == true)
{


    <div class="container">
        <di class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Region Updated Successfully. Go to <a asp-action="Index" asp-controller="Region">Region Home Page</a> </strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<form asp-action="Edit" asp-controller="Region" method="post">
    <h1 class="display-6">Edit Region</h1>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="mb-4">
                    <label asp-for="Id"></label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="mb-4">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <input type="submit" value="Edit Region" class="btn btn-primary" />
                </div>
            </div>
        </div>
</form>