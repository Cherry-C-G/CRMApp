@model IEnumerable<ShipperResponseModel>
<a asp-action="Create" asp-controller="Shipper" class="btn btn-success">Add Shipper</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Phone</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach(var s in Model)
            {
               <tr>
    <td>@s.Id</td>
    <td>@s.Name</td>
    <td>@s.Phone</td>
    <td>
        <span>
            <a asp-controller="Shipper" asp-action="Edit" asp-route-id="@s.Id" class="btn btn-primary">Edit</a>
        </span>
    </td>
    <td>
        <span>
            <a asp-controller="Shipper" asp-action="Delete" asp-route-id="@s.Id" class="btn btn-danger">Delete</a>
        </span>
    </td>
</tr>
            }
        }
    </tbody>
</table>