@using Antra.CRMApp.Core.Entity
@model IEnumerable<CustomerResponseModel>
<a asp-action="Create" asp-controller="Customer" class="btn btn-success">Add Customer</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Title</th>
            <th>Address</th>
            <th>City</th>
            <th>Region</th>
            <th>Postal Code</th>
            <th>Country</th>
            <th>Phone</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var c in Model)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.Name</td>
                    <td>@c.Title</td>
                    <td>@c.Address</td>
                    <td>@c.City</td>
                    <td>@c.RegionId</td>
                    <td>@c.PostalCode</td>
                    <td>@c.Country</td>
                    <td>@c.Phone</td>
                    <td>
                        <span>
                            <a asp-controller="Customer" asp-action="Edit" asp-route-id="@c.Id" class="btn btn-primary">Edit</a>
                        </span>
                    </td>
                    <td>
                        <span>
                            <a asp-controller="Customer" asp-action="Delete" asp-route-id="@c.Id" class="btn btn-danger">Delete</a>
                        </span>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>