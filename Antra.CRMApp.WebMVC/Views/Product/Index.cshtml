<!--index.cshtml is a razor view...
    razor is a viewengine, it will convert the C# code to
    the script code which a browser can understand
-->
@model IEnumerable<ProductResponseModel>
<a asp-action="Create" asp-controller="Product" class="btn btn-success">Add Product</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Vendor Id</th>
            <th>Category Id</th>
            <th>Quantity Per Unit</th>
            <th>Unit Price</th>
            <th>Units In Stock</th>
            <th>Units On Order</th>
            <th>Reorder Level</th>
            <th>Status</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var p in Model)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Name</td>
                    <td>@p.VendorId</td>
                    <td>@p.CategoryId</td>
                    <td>@p.QuantityPerUnit</td>
                    <td>@p.UnitPrice</td>
                    <td>@p.UnitsInStock</td>
                    <td>@p.UnitsOnOrder</td>
                    <td>@p.ReorderLevel</td>
                    <td>
                        @{
                            var discontinuedStatus = "Available";
                            if (@p.Discontinued)
                            {
                                discontinuedStatus = "Discontinued";
                            }
                        }
                        @discontinuedStatus
                    </td>
                    <td>
                        <span>
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@p.Id" class="btn btn-primary">Edit</a>
                        </span>
                    </td>
                    <td>
                        <span>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@p.Id" class="btn btn-danger">Delete</a>
                        </span>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>