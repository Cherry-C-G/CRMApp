@model OrderRequestModel
<form asp-controller="Order" asp-action="Create" method="post">
    <h1 class="display-6">Add New Order</h1>
    <hr/>
<div class="container">
    <div class="row">
        <div class="col">
            <div class="mb-4">
                <label asp-for="Id"></label>
                <input asp-for="Id" class="form-control"/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
        </div>

    <div class="row">
        <div class="col">
            <input type="submit" value="Add Order" class="btn btn-primary" />
        </div>
    </div>
</div>
</form>