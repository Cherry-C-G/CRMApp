@model OrderRequestModel


   @if (ViewBag.IsEdit==true)
{
    
    
        <div class="container">
            <di class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Order Updated Successfully. Go to <a asp-action="Index" asp-controller="Order" >>Order Home Page</a> </strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
}


<form asp-controller="Order" asp-action="Edit" method="post" >
    <h1 class="display-6">Add New Order</h1>
    <hr/>
<div class="container">
    <div class="row">
        <div class="col">
            <div class="mb-4">
                <label asp-for="Id"></label>
                <input asp-for="Id" class="form-control"/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
        </div>
 
    <div class="row">
        <div class="col">
            <input type="submit" value="Edit Order" class="btn btn-primary" />
        </div>
    </div>
</div>
</form>